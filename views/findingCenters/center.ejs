<% layout('/layouts/boilerplate') %>
<link rel="stylesheet" href="/styles/star.css">

<div class="container row">
  <div>
    <h2 align="center">Centers In Your Area </h2><br /><br />
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title"><%= center.name %> </h5>
        <h6 class="card-subtitle mb-2 text-muted"><%= center.address %> </h6>
        <p class="card-text">Time: <%= center.from %> to <%= center.to %> </p>
        <% if(center.vaccine_fees === undefined){ %>
          <p class="card-text"><b>Vaccine: </b><%= center.sessions[0].vaccine %> </p>
          <p class=" card-text"><b>Price: </b><%=center.fee_type%>  </p>
        <% } else { %>
          <% for(vac of center.vaccine_fees){ %>
            <p class="card-text"><b>Vaccine: </b><%= vac.vaccine %></p>
            <p class=" card-text"><b>Price: </b><%= vac.fee %>  </p>
          <% } %> 
        <% } %>
        <p class="card-text"><b>Dates Available:</b> <br> 
          <% for(session of center.sessions){%>
            <%=session.date%> <br> 
          <% } %>  
        </p>
        <p class="card-text"><b>Slots Available: </b><%=center.sessions[0].slots%> </p>
        <a href="#" class="card-link btn btn-primary">Schedule Appointment</a>
        <a href="/" class="card-link btn btn-primary">Go to Home Page</a>
      </div>
    </div>  
</div>
</div>

<div class="col-6"> 
  <% if(currentUser) {%>
    <form class="mb-3 validate-form" action="/findCenters/center/reviews" method="POST" novalidate>
      <h2>Write A Review</h2>
      <div class="mb-3">
        <label class="form-label" for="rating">Rating</label>
        <fieldset class="starability-basic">
          <legend>Rating:</legend>
          <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No Rating." />
          <input type="radio" id="second-rate1" name="review[rating]" value="1" />
          <label for="second-rate1" title="Terrible">1 star</label>
          <input type="radio" id="second-rate2" name="review[rating]" value="2" />
          <label for="second-rate2" title="Not good">2 stars</label>
          <input type="radio" id="second-rate3" name="review[rating]" value="3" />
          <label for="second-rate3" title="Average">3 stars</label>
          <input type="radio" id="second-rate4" name="review[rating]" value="4" />
          <label for="second-rate4" title="Very good">4 stars</label>
          <input type="radio" id="second-rate5" name="review[rating]" value="5" />
          <label for="second-rate5" title="Amazing">5 stars</label>
        </fieldset>
      </div>
      <div class="mb-3">
        <label class="form-label" for="body">Review</label>
          <textarea class="form-control"name="review[body]" id="body" cols="30" rows="5" required></textarea>              
      </div>
      <button class="btn btn-success mb-3">Save</button>
    </form>
  <% } %> 
  <% for(let review of reviews) {%> 
    <div class="card mb-3">
      <div class="card-body mb-3">
        <% console.log(review.author)%> 
        <h5 class="card-title"><%= review.username %></h5>
        <p class="starability-result" data-rating="<%= review.rating %>">
          Rated: <%= review.rating %>
        </p>
        <p class="card-text">Review: <%= review.body %> </p>
        <% if(currentUser && review.author.equals(currentUser._id)){ %> 
          <form class="" action="/findCenters/center/reviews/<%= review._id%>?_method=DELETE" method="POST">  
            <button class="btn btn-sm btn-danger">Delete</button>
          </form>
        <% } %> 
      </div>
      
    </div>
    <% } %>
